<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="840.0" style="-fx-background-color: #0f172a;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.DashboardController">
    <children>
        <VBox layoutX="40.0" layoutY="30.0" spacing="30.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="30.0">
            <children>
                <VBox spacing="5.0">
                    <children>
                        <Label text="System Overview" textFill="WHITE">
                            <font>
                                <Font name="Segoe UI Bold" size="28.0" />
                            </font>
                        </Label>
                        <Label text="Welcome back! Here is what's happening in the library today." textFill="#94a3b8">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <HBox spacing="20.0">
                    <children>
                        <VBox prefHeight="120.0" prefWidth="240.0" style="-fx-background-color: #1e293b; -fx-background-radius: 15; -fx-padding: 20; -fx-border-color: #3b82f6; -fx-border-radius: 15;">
                            <children>
                                <Label text="Total Books" textFill="#94a3b8" />
                                <Region VBox.vgrow="ALWAYS" />
                                <Label fx:id="lblTotalBooks" text="0" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="32.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <VBox prefHeight="120.0" prefWidth="240.0" style="-fx-background-color: #1e293b; -fx-background-radius: 15; -fx-padding: 20; -fx-border-color: #10b981; -fx-border-radius: 15;">
                            <children>
                                <Label text="Registered Members" textFill="#94a3b8" />
                                <Region VBox.vgrow="ALWAYS" />
                                <Label fx:id="lblTotalMembers" text="0" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="32.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <VBox prefHeight="120.0" prefWidth="240.0" style="-fx-background-color: #1e293b; -fx-background-radius: 15; -fx-padding: 20; -fx-border-color: #ef4444; -fx-border-radius: 15;">
                            <children>
                                <Label text="Overdue Books" textFill="#94a3b8" />
                                <Region VBox.vgrow="ALWAYS" />
                                <Label fx:id="lblOverdueBooks" text="0" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="32.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <VBox prefHeight="350.0" spacing="15.0" style="-fx-background-color: #1e293b; -fx-background-radius: 15; -fx-padding: 20;" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="Recent Transactions" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <TableView fx:id="tblRecentTransactions" prefHeight="200.0" prefWidth="200.0" style="-fx-base: #1e293b; -fx-control-inner-background: #1e293b; -fx-background-color: #1e293b; -fx-table-cell-border-color: #334155; -fx-table-header-background-color: #0f172a; -fx-border-color: #334155; -fx-border-radius: 10; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colTransId" prefWidth="100.0" text="ID" />
                                <TableColumn fx:id="colMemberName" prefWidth="250.0" text="Member Name" />
                                <TableColumn fx:id="colBookTitle" prefWidth="250.0" text="Book Title" />
                                <TableColumn fx:id="colDate" prefWidth="150.0" text="Date" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>