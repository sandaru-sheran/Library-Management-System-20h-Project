<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="950.0" style="-fx-background-color: #0f172a;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UserManagementController">
    <children>
        <VBox layoutX="30.0" layoutY="30.0" spacing="20.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="User Management" textFill="WHITE">
                                    <font>
                                        <Font name="Segoe UI Bold" size="24.0" />
                                    </font>
                                </Label>
                                <Label text="Manage staff credentials and access roles." textFill="#94a3b8" />
                            </children>
                        </VBox>
                        <TextField fx:id="txtSearchUser" prefHeight="40.0" prefWidth="300.0" promptText="Search Username or Role..." style="-fx-background-color: #1e293b; -fx-text-fill: white; -fx-background-radius: 8; -fx-border-color: #334155;" />
                    </children>
                </HBox>

                <HBox spacing="25.0" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox prefWidth="320.0" spacing="12.0" style="-fx-background-color: #1e293b; -fx-padding: 20; -fx-background-radius: 15;">
                            <children>
                                <Label text="User Credentials" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="User ID" textFill="#94a3b8" />
                                        <HBox spacing="8.0" alignment="CENTER_LEFT">
                                            <children>
                                                <TextField fx:id="txtUserId" editable="false" prefHeight="35.0" HBox.hgrow="ALWAYS" style="-fx-background-color: #0f172a; -fx-text-fill: #64748b; -fx-border-color: #334155; -fx-background-radius: 5; -fx-border-radius: 5;" text="0" />
                                                <Button onAction="#clearIdOnAction" prefHeight="35.0" prefWidth="40.0"
                                                        style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;"
                                                        text="â†º" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Username" textFill="#94a3b8" />
                                        <TextField fx:id="txtUsername" prefHeight="35.0" style="-fx-background-color: #0f172a; -fx-text-fill: white; -fx-border-color: #334155;" />
                                    </children>
                                </VBox>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Password" textFill="#94a3b8" />
                                        <TextField fx:id="txtPassword" prefHeight="35.0" style="-fx-background-color: #0f172a; -fx-text-fill: white; -fx-border-color: #334155;" />
                                    </children>
                                </VBox>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Role" textFill="#94a3b8" />
                                        <ComboBox fx:id="cmbRole" maxWidth="Infinity" prefHeight="35.0" promptText="Select Role" style="-fx-background-color: #0f172a; -fx-border-color: #334155;" />
                                    </children>
                                </VBox>

                                <VBox spacing="15.0" style="-fx-padding: 10 0 0 0;">
                                    <children>
                                        <Button fx:id="btnSaveUser" maxWidth="Infinity" onAction="#saveUserOnAction" prefHeight="40.0" style="-fx-background-color: #a855f7; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Create Account" />
                                        <HBox spacing="10.0">
                                            <children>
                                                <Button fx:id="btnUpdateUser" maxWidth="Infinity" onAction="#updateUserOnAction" prefHeight="35.0" style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-background-radius: 8;" text="Update" HBox.hgrow="ALWAYS" />
                                                <Button fx:id="btnDeleteUser" maxWidth="Infinity" onAction="#deleteUserOnAction" prefHeight="35.0" style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-background-radius: 8;" text="Delete" HBox.hgrow="ALWAYS" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <TableView fx:id="tblUsers" prefHeight="200.0" style="-fx-base: #1e293b; -fx-control-inner-background: #1e293b; -fx-background-color: #1e293b; -fx-table-cell-border-color: #334155; -fx-table-header-background-color: #0f172a;" HBox.hgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colUserId" prefWidth="80.0" text="ID" />
                                <TableColumn fx:id="colUsername" prefWidth="200.0" text="Username" />
                                <TableColumn fx:id="colRole" prefWidth="150.0" text="Role" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>