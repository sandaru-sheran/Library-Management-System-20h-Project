<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="950.0" style="-fx-background-color: #0f172a;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminRentalLogsController">
    <children>
        <VBox layoutX="30.0" layoutY="30.0" spacing="25.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
            <children>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Global Rental Logs" textFill="WHITE">
                                    <font>
                                        <Font name="Segoe UI Bold" size="24.0" />
                                    </font>
                                </Label>
                                <Label text="A complete history of all book issues, returns, and financial records." textFill="#94a3b8" />
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="60.0" prefWidth="200.0" style="-fx-background-color: #1e293b; -fx-background-radius: 12; -fx-border-color: #334155; -fx-border-radius: 12;">
                            <children>
                                <Label text="Total Transactions" textFill="#94a3b8">
                                    <font>
                                        <Font size="13.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblTotalTransactions" text="0" textFill="#f59e0b">
                                    <font>
                                        <Font name="System Bold" size="22.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <TextField fx:id="txtSearchLogs" prefHeight="45.0" promptText="Search by Rental ID, Customer ID, or Book ID..." style="-fx-background-color: #1e293b; -fx-text-fill: white; -fx-background-radius: 10; -fx-border-color: #334155; -fx-border-radius: 10; -fx-padding: 0 20 0 20;" />

                <TableView fx:id="tblRentalLogs" style="-fx-base: #1e293b; -fx-control-inner-background: #1e293b; -fx-background-color: #1e293b; -fx-table-cell-border-color: #334155; -fx-table-header-background-color: #0f172a;" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colRentalId" prefWidth="60.0" text="RID" style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colBookId" prefWidth="80.0" text="Book ID" style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colCustId" prefWidth="80.0" text="Cust ID" style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colIssueDate" prefWidth="110.0" text="Issue Date" style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colReturnDate" prefWidth="110.0" text="Return Date" style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colFine" prefWidth="100.0" text="Fine (LKR)" style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colPayment" prefWidth="120.0" text="Payment" style="-fx-alignment: CENTER;"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>