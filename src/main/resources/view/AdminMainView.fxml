<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<BorderPane fx:id="mainPane" prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #0f172a;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminHubController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="30.0" style="-fx-background-color: #1e293b;" BorderPane.alignment="CENTER">
            <children>
                <Label style="-fx-padding: 0 0 0 15; -fx-font-weight: bold;" text="Library System - Admin Hub" textFill="#94a3b8" />

                <Region HBox.hgrow="ALWAYS" />

                <Button fx:id="btnClose" onAction="#closeApp" prefHeight="30.0" prefWidth="45.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 0; -fx-border-radius: 0; -fx-cursor: hand;" text="âœ•" />
            </children>
        </HBox>
    </top>

    <left>
        <VBox maxWidth="260.0" minWidth="260.0" prefWidth="260.0" style="-fx-background-color: #0f172a; -fx-padding: 20; -fx-spacing: 12; -fx-border-color: #1e293b; -fx-border-width: 0 1 0 0;" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <VBox.margin><Insets bottom="30.0" top="10.0" /></VBox.margin>
                    <children>
                        <ImageView fitHeight="133.0" fitWidth="218.0" pickOnBounds="true" preserveRatio="true">
                            <image><Image url="@../Library.png" /></image>
                        </ImageView>
                    </children>
                </HBox>
                <Button fx:id="btnOverview" maxWidth="Infinity" mnemonicParsing="false" prefHeight="45.0" style="-fx-background-color: #a855f7; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT; -fx-padding: 0 0 0 20; -fx-cursor: hand;" text="Admin Overview" />
                <Button fx:id="btnBooks" maxWidth="Infinity" mnemonicParsing="false" prefHeight="45.0" style="-fx-background-color: transparent; -fx-text-fill: #94a3b8; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT; -fx-padding: 0 0 0 20; -fx-cursor: hand;" text="Book Inventory" />
                <Button fx:id="btnCustomers" maxWidth="Infinity" mnemonicParsing="false" prefHeight="45.0" style="-fx-background-color: transparent; -fx-text-fill: #94a3b8; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT; -fx-padding: 0 0 0 20; -fx-cursor: hand;" text="Customer Base" />
                <Button fx:id="btnRentals" maxWidth="Infinity" mnemonicParsing="false" prefHeight="45.0" style="-fx-background-color: transparent; -fx-text-fill: #94a3b8; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT; -fx-padding: 0 0 0 20; -fx-cursor: hand;" text="Rental Logs" />
                <VBox spacing="5.0" style="-fx-padding: 15 0 0 0;">
                    <children>
                        <Region prefHeight="1.0" style="-fx-background-color: #334155;" />
                        <Button fx:id="btnManageUsers" maxWidth="Infinity" mnemonicParsing="false" prefHeight="45.0" style="-fx-background-color: transparent; -fx-text-fill: #fbbf24; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT; -fx-padding: 0 0 0 20; -fx-cursor: hand;" text="Manage Staff (Users)" />
                        <Button fx:id="btnSystemReports" maxWidth="Infinity" mnemonicParsing="false" prefHeight="45.0" style="-fx-background-color: transparent; -fx-text-fill: #94a3b8; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT; -fx-padding: 0 0 0 20; -fx-cursor: hand;" text="System Reports" />
                    </children>
                </VBox>
                <Region VBox.vgrow="ALWAYS" />
                <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#logoutaction" prefHeight="45.0" style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold; -fx-cursor: hand;" text="Logout" />
            </children>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #0f172a;" BorderPane.alignment="CENTER" />
    </center>
</BorderPane>
