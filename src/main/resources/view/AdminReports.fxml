<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="950.0" style="-fx-background-color: #0f172a;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminReportsController">
    <children>
        <VBox layoutX="30.0" layoutY="30.0" spacing="25.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
            <children>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="System Analytics &amp; Reports" textFill="WHITE">
                                    <font>
                                        <Font name="Segoe UI Bold" size="24.0" />
                                    </font>
                                </Label>
                                <Label text="Visual data summaries and financial reports for the library system." textFill="#94a3b8" />
                            </children>
                        </VBox>
                        <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #a855f7; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="Export Full Report" />
                    </children>
                </HBox>

                <HBox spacing="20.0">
                    <children>
                        <VBox prefHeight="100.0" prefWidth="280.0" style="-fx-background-color: #1e293b; -fx-background-radius: 12; -fx-padding: 15; -fx-border-color: #334155; -fx-border-radius: 12;">
                            <children>
                                <Label text="Total Revenue (Fines)" textFill="#94a3b8" />
                                <Region VBox.vgrow="ALWAYS" />
                                <Label fx:id="lblTotalRevenue" text="0.00 LKR" textFill="#10b981">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox prefHeight="100.0" prefWidth="280.0" style="-fx-background-color: #1e293b; -fx-background-radius: 12; -fx-padding: 15; -fx-border-color: #334155; -fx-border-radius: 12;">
                            <children>
                                <Label text="Outstanding Fines" textFill="#94a3b8" />
                                <Region VBox.vgrow="ALWAYS" />
                                <Label fx:id="lblOutstandingFines" text="0.00 LKR" textFill="#ef4444">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox prefHeight="100.0" prefWidth="280.0" style="-fx-background-color: #1e293b; -fx-background-radius: 12; -fx-padding: 15; -fx-border-color: #334155; -fx-border-radius: 12;">
                            <children>
                                <Label text="Total Active Rentals" textFill="#94a3b8" />
                                <Region VBox.vgrow="ALWAYS" />
                                <Label fx:id="lblActiveRentals" text="0" textFill="#3b82f6">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <HBox spacing="25.0" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox prefWidth="400.0" spacing="15.0" style="-fx-background-color: #1e293b; -fx-padding: 20; -fx-background-radius: 15;">
                            <children>
                                <Label text="Inventory Distribution" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <PieChart fx:id="chartInventory" legendVisible="true" style="-fx-pie-label-visible: true;" VBox.vgrow="ALWAYS" />
                            </children>
                        </VBox>

                        <VBox spacing="15.0" style="-fx-background-color: #1e293b; -fx-padding: 20; -fx-background-radius: 15;" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Most Popular Books" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <TableView fx:id="tblPopularBooks" prefHeight="200.0" style="-fx-base: #1e293b; -fx-control-inner-background: #1e293b; -fx-background-color: #1e293b; -fx-table-cell-border-color: #334155; -fx-table-header-background-color: #0f172a;" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="colRankBookTitle" prefWidth="200.0" text="Book Title" />
                                        <TableColumn fx:id="colRankCategory" prefWidth="120.0" text="Category" />
                                        <TableColumn fx:id="colRankCount" prefWidth="100.0" text="Times Borrowed" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>