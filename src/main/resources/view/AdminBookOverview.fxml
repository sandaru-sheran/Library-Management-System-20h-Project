<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="950.0" style="-fx-background-color: #0f172a;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminBookOverviewController">
    <children>
        <VBox layoutX="30.0" layoutY="30.0" spacing="25.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
            <children>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Global Book Inventory" textFill="WHITE">
                                    <font>
                                        <Font name="Segoe UI Bold" size="24.0" />
                                    </font>
                                </Label>
                                <Label text="A comprehensive view of all books currently in the library system." textFill="#94a3b8" />
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="60.0" prefWidth="180.0" style="-fx-background-color: #1e293b; -fx-background-radius: 12; -fx-border-color: #334155; -fx-border-radius: 12;">
                            <children>
                                <Label text="Total Books" textFill="#94a3b8">
                                    <font>
                                        <Font size="13.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblTotalBooksCount" text="0" textFill="#3b82f6">
                                    <font>
                                        <Font name="System Bold" size="22.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <TextField fx:id="txtSearchInventory" prefHeight="45.0" promptText="Search by Title, Author, Category or ID..." style="-fx-background-color: #1e293b; -fx-text-fill: white; -fx-background-radius: 10; -fx-border-color: #334155; -fx-border-radius: 10; -fx-padding: 0 20 0 20;" />

                <TableView fx:id="tblInventory" style="-fx-base: #1e293b; -fx-control-inner-background: #1e293b; -fx-background-color: #1e293b; -fx-table-cell-border-color: #334155; -fx-table-header-background-color: #0f172a; -fx-border-color: #334155; -fx-border-radius: 10; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colBookId" prefWidth="80.0" text="Book ID" style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="colBookTitle" prefWidth="250.0" text="Title" style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="colBookAuthor" prefWidth="180.0" text="Author" style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colBookCategory" prefWidth="150.0" text="Category" style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="colBookQty" prefWidth="100.0" text="Qty in Stock" style="-fx-alignment: CENTER;" />                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>